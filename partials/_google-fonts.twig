{% if 'Google' in settings.heading_font %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.heading_font | remove('Google+') }}:300,400,700">
{% endif %}

{% if 'Google' in settings.base_font and settings.base_font != settings.heading_font %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.base_font | remove('Google+') }}:300,400,600">
{% endif %}

{% if 'Google' in settings.base_font and settings.heading_font != settings.btn_font %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.btn_font | remove('Google+') }}:300,400,600">
{% endif %}
