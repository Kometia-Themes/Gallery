{% extends 'layout.twig' %}

{% block body %}
<div class="container-fluid customer">
  <div class="row header">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 page__description">
      <div class="outer">
        <div class="inner">
          <h1 class="page-title">Recuperar Contraseña</h1>
          <p>Por favor ingresa tu correo electrónico. Recibirás un link para cambiar tu contraseña.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row content">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
      {% form 'customer_recover_password' 'role="form" class="login-form"' %}
      <div class="row row__inputs">
          <div class="form-group">
            <div class="input-group input-group-lg login-form__input">
              <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Correo electrónico" required>
            </div>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Recuperar</button><a class="btn  btn-action btn-danger" href="/cuenta/login">Cancelar</a>
          </div>
          <p>
          </p>
        </div>
      {% endform %}
    </div>
  </div> <!-- .content -->
</div> <!-- .container-fluid -->
{% endblock %}
